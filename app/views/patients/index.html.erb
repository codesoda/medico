<h1>Listing patients</h1>

<table class="pure-table pure-table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Ur number</th>
      <th>Medicare</th>
      <th>Credit card</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.ur_number %></td>
        <td><%= patient.medicare %></td>
        <td title="<%= patient.credit_card %>    <%= patient.encrypted_credit_card %>"><%= patient.masked_credit_card %></td>
        <td><%= patient.notes %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

